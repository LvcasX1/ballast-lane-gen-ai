REQUEST {
  name: "Login"
  method: "POST"
  url: "{{base_url}}/login"
  headers: {
    "content-type": "application/json"
  }
  body: json({
    "email": "{{email}}",
    "password": "{{password}}"
  })
}

SCRIPT postResponse {
  try {
    const body = JSON.parse(response.body);
    if (body.token) env.set("jwt", body.token);
    if (body.user && body.user.id) env.set("user_id", String(body.user.id));
  } catch (e) { /* ignore */ }
}
